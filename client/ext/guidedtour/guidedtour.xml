<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:skin id="guidedtour"
      src        = "{require('ext/guidedtour/guidedtour').skin}"
      media-path = "/static/ext/guidedtour/images/" />
    
    <a:window
        id = "quickStartDialog"
        title = ""
        center = "true"
        modal = "false"
        buttons = "close"
        kbclose   = "true"
        width     = "500"
        skinset   = "guidedtour"
        skin ="quickstart"
        draggable = "false">
        <a:vbox >
            <a:text id="quickStartTitle" class="qstitle" value="Here are a few pointers to get you started!"/>
            <a:divider />
          <a:text id="tourGuideText" class="tgtext">For a detailed guided tour, <a href="alert('noi');"
                class="tgLink">click here!</a></a:text>
          <a:divider />
            <a:text id="supportText" class="qsSupportText" value="If you ever run into trouble, be sure to check out our support page on &lt;a href=&quot;http://c9.io/support&quot; class=&quot;supportLink&quot; target=&quot;_blank&quot;>c9.io/support&lt;/a>, or talk to us on &lt;a href=&quot;https://twitter.com/#!/C9Support&quot; class=&quot;supportLink&quot; target=&quot;_blank&quot;>Twitter&lt;/a>!"/>
          <a:divider />
          <a:hbox padding="5" pack="center">
                <a:checkbox id="quickStartCheckbox" 
                    label   = "Show this quick start on startup" 
                    value   = "[{require('ext/settings/settings').model}::auto/help/@show]" />
                <a:text id="gotoEditor" value="Just take me to the editor" />
            </a:hbox>
            
        </a:vbox> 
    </a:window>
    
    <a:window
        id = "qsProjectBar"
        title = ""
        center = "false"
        modal = "false"
        buttons = ""
        kbclose   = "false"
        width     = "200"
        skinset   = "guidedtour"
        skin ="qsImage"
        draggable = "false">
        <a:vbox class="qsProjectBar">
        </a:vbox>
    </a:window>
    
    <a:window
      id        = "winTourGuide"
      title     = "Guided Tour"
      center    = "true"
      modal     = "false"
      buttons   = "close"
      kbclose   = "true"
      width     = "300">
        <a:vbox>
        <a:text id="winTourDesc" />
        <a:hbox padding="5" pack="end" edge="10 10 5 10">
            <a:button id="startTour" default="2" class="ui-btn-green" onclick = "
                        require('ext/guidedtour/guidedtour').startTour();
                    ">Let's start!</a:button>
        </a:hbox>
        </a:vbox>
    </a:window>
    <a:window
        id        = "tourControlsDialog"
        title     = "Controls"
        center    = "false"
        modal     = "false"
        buttons   = ""
        kbclose   = "false"
        width     = "160">
                <a:hbox padding="5" pack="end" edge="10 10 5 10">
                <!-- Play pause etc -->
                <a:button
                    id = "btnTourStepBack"
                    disabled = "true"
                    caption = "←"
                    onclick = "
                        require('ext/guidedtour/guidedtour').stepBack();
                    "
                />
                <a:button
                    id = "btnTourPlay"
                    caption = "►"
                    onclick = "
                        require('ext/guidedtour/guidedtour').togglePlay();
                    "
                />
                <a:button
                    id = "btnTourStepForward"
                    caption = "→"
                    onclick = "
                        require('ext/guidedtour/guidedtour').stepForward();
                    "
                />
            </a:hbox>   
    </a:window>
        
    <a:window
      id        = "winTourText"
      title     = ""
      center    = "false"
      modal     = "false"
      buttons   = ""
      kbclose   = "false"
      width     = "160"
      skinset   = "guidedtour"
      skin      = "guidetool"
      draggable = "false"
      >
        <a:text id="textTourDesc" flex="1" />     
    </a:window>
</a:application>