<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:skin id="guidedtour"
      src        = "{require('ext/guidedtour/guidedtour').skin}" 
      media-path = "/static/ext/guidedtour/images/" />
    <a:window
      id        = "winTourGuide"
      title     = "Tour Guide"
      center    = "false"
      modal     = "false"
      buttons   = "close"
      kbclose   = "true"
      width     = "300">
        <a:vbox>
            <a:hbox padding="5" edge="10">
                <!-- Play pause etc -->
                <a:button
                    id = "btnTourStepBack"
                    disabled = "true"
                    caption = "&lt;&lt;"
                    onclick = "
                        require('ext/guidedtour/guidedtour').stepBack();
                    "
                />
                <a:button
                    id = "btnTourPlay"
                    caption = "O"
                    onclick = "
                        require('ext/guidedtour/guidedtour').togglePlay();
                    "
                />
                <a:button
                    id = "btnTourStepForward"
                    caption = "&gt;&gt;"
                    onclick = "
                        require('ext/guidedtour/guidedtour').stepForward();
                    "
                />
            </a:hbox>
        </a:vbox>
    </a:window>
    <a:window
      id        = "winTourText"
      title     = ""
      center    = "false"
      modal     = "false"
      buttons   = ""
      kbclose   = "true"
      width     = "160"
      skinset   = "guidedtour"
      skin      = "guidetool"
      >
        <a:text id="textTourDesc" flex="1" />
    </a:window>
</a:application>